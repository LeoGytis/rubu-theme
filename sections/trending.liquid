{% assign last_collection = collections.last %}

<div class="p-14">
  <div class="text-3xl text-gray-400 uppercase text-center p-10">
    Populiariausios kategorijos {{ block.settings.header_text }}
  </div>
  <div class="flex flex-wrap justify-evenly">
    {% for item in last_collection.products %}
      <div class="flex flex-col items-center">
        <img class="p-6" src="{{ item.featured_image.src | img_url: '267x354' }}" alt="{{ item.title }}">
        <div class="text-2xl font-semibold">{{ item.title }}</div>
        <div class="text-2xl font-semibold">{{ item.price | money_with_currency }}</div>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Trending Now",
  "max_blocks": 12,
  "settings": [
    {
      "type": "select",
      "id": "sort_a",
      "label": "Sort collections",
      "options": [
        {
          "value": "sortation",
          "label": "Alphabetical"
        }
      ]
    }
  ],
  "blocks": [
    {
      "type": "trending",
      "name": "Trending Now",
      "settings": [
        {
          "type": "richtext",
          "id": "header_text",
          "label": "Collections text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Trending Now"
    }
  ]
}
{% endschema %}
