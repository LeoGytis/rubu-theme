{% for block in section.blocks %}
  <div
    class="p-3 text-sm {{ section.settings.text_align }}"
    style="background-color: {{ block.settings.bg_color }}; color: {{block.settings.text_color}}"
  >
    {{ block.settings.text }}
  </div>
{% endfor %}

{% schema %}
{
  "name": "Collections Bar",
  "max_blocks": 12,
  "settings": [
    {
      "type": "select",
      "id": "text_align",
      "label": "Text aligment",
      "options": [
        {
          "value": "text-left",
          "label": "Text left"
        },
        {
          "value": "text-center",
          "label": "Text center"
        },
        {
          "value": "text-right",
          "label": "Text right"
        }
      ]
    }
  ],
  "blocks": [
    {
      "type": "discount",
      "name": "Discount",
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "label": "Discount text"
        },
        {
          "type": "color",
          "id": "bg_color",
          "label": "Background color"
        },
        {
          "type": "color",
          "id": "text_color",
          "label": "Text color text"
        }
      ]
    }
  ]
}
{% endschema %}
