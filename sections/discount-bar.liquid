{% for block in section.blocks %}

  <div style="background-color: {{ block.settings.bg_color }}; color: {{block.settings.text_color}}">
    {{ block.settings.text }}
    {{ block.settings.bg_color }}
    {{ block.settings.text_color }}
  </div>

{% endfor %}

{% schema %}
  {
    "name": "Discount Bar",
    "max_blocks": 12,
    "settings": [],
    "blocks": [
      {
        "type": "discount",
        "name": "Discount",
        "settings": [
          {
            "type": "richtext",
            "id": "text",
            "label": "Discount text"
          }, {
            "type": "color",
            "id": "bg_color",
            "label": "Background color"
          }, {
            "type": "color",
            "id": "text_color",
            "label": "Text color text"
          }
        ]
      }
    ]
  }
{% endschema %}