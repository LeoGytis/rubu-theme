{% for block in section.blocks %}

  <div class="text-center bg-blue-500" style="background-color: {{ block.settings.bg_color }}; color: {{block.settings.text_color}}">
    <h2 class="text-center">{{ block.settings.text }}</h2>
  </div>
  <div class="text-center bg-blue-500 bg-amber-800">
    <h2 class="text-center">{{ block.settings.text }}</h2>
  </div>

{% endfor %}

{% schema %}
  {
    "name": "Discount Bar",
    "max_blocks": 12,
    "settings": [
      {
        "type": "select",
        "id": "text_align",
        "label": "Text aligment",
        "options": [
          {
            "value": "text-left",
            "label": "Text left"
          }, {
            "value": "text-center",
            "label": "Text center"
          }, {
            "value": "text-right",
            "label": "Text right"
          }
        ]
      }
    ],
    "blocks": [
      {
        "type": "discount",
        "name": "Discount",
        "settings": [
          {
            "type": "richtext",
            "id": "text",
            "label": "Discount text"
          }, {
            "type": "color",
            "id": "bg_color",
            "label": "Background color"
          }, {
            "type": "color",
            "id": "text_color",
            "label": "Text color text"
          }
        ]
      }
    ]
  }
{% endschema %}